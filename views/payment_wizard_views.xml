<odoo>
    <record id="view_ps_ledger_payment_wizard" model="ir.ui.view">
        <field name="name">ps.ledger.payment.wizard.form</field>
        <field name="model">ps.ledger.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="Ödeme Yap">
                <group>
                    <field name="partner_id" readonly="1"/>
                    <field name="amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    <field name="payment_method"/>
                    <field name="date"/>
                    <field name="note"/>
                </group>
                <footer>
                    <button string="Öde" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="İptal" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
