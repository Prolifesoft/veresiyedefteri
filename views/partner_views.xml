<odoo>
    <data>
        <!-- Partner Kanban View -->
        <record id="view_partner_veresiye_kanban" model="ir.ui.view">
            <field name="name">res.partner.veresiye.kanban</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban">
                    <field name="name"/>
                    <field name="phone"/>
                    <field name="avatar_128"/>
                    <field name="veresiye_total_amount"/>
                    <field name="veresiye_paid_amount"/>
                    <field name="veresiye_remaining_amount"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('res.partner', record.id.raw_value, 'avatar_128')"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong><field name="name"/></strong>
                                    <div t-if="record.phone">
                                        <field name="phone"/>
                                    </div>
                                    <div>
                                        Borç: <field name="veresiye_total_amount"/>
                                    </div>
                                    <div>
                                        Ödenen: <field name="veresiye_paid_amount"/>
                                    </div>
                                    <div>
                                        Kalan: <field name="veresiye_remaining_amount"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Partner Tree View -->
        <record id="view_partner_veresiye_tree" model="ir.ui.view">
            <field name="name">res.partner.veresiye.tree</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="veresiye_total_amount"/>
                    <field name="veresiye_paid_amount"/>
                    <field name="veresiye_remaining_amount"/>
                </tree>
            </field>
        </record>

        <!-- Partner Form View -->
        <record id="view_partner_veresiye_form" model="ir.ui.view">
            <field name="name">res.partner.veresiye.form</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="phone"/>
                        </group>
                        <field name="veresiye_line_ids">
                            <tree>
                                <field name="product_id"/>
                                <field name="name"/>
                                <field name="quantity"/>
                                <field name="price_unit"/>
                                <field name="subtotal"/>
                                <field name="paid_amount"/>
                                <field name="remaining_amount"/>
                                <field name="date"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_veresiye_partner" model="ir.actions.act_window">
            <field name="name">Müşteriler</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="views" eval="[(ref('view_partner_veresiye_kanban'), 'kanban'), (ref('view_partner_veresiye_tree'), 'tree'), (ref('view_partner_veresiye_form'), 'form')]"/>
        </record>
    </data>
</odoo>
