<odoo>
    <data>
        <record id="view_ps_partner_ledger_tree" model="ir.ui.view">
            <field name="name">res.partner.ledger.tree</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="x_phone_display"/>
                    <field name="x_ledger_total_debt" sum="Toplam"/>
                    <field name="x_ledger_total_paid" sum="Toplam"/>
                    <field name="x_ledger_balance" sum="Toplam"/>
                </tree>
            </field>
        </record>

        <record id="view_partner_veresiye_form" model="ir.ui.view">
            <field name="name">res.partner.veresiye.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/header" position="inside">
                    <button name="action_add_payment" type="object" string="Ödeme Yap" class="btn-primary"/>
                    <button name="action_print_ledger" type="object" string="Yazdır"/>
                    <button name="action_delete" type="object" string="Sil" class="btn-danger"/>
                    <button name="action_save" type="object" string="Kaydet"/>
                </xpath>
                <xpath expr="//form/sheet/notebook" position="replace">
                    <notebook>
                        <page string="Fatura Satırları">
                            <field name="ledger_entry_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="price_unit" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="subtotal" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="date"/>
                                    <field name="paid_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Diğer Bilgiler">
                            <group>
                                <group>
                                    <field name="street"/>
                                    <field name="city"/>
                                    <field name="zip"/>
                                    <field name="country_id"/>
                                </group>
                                <group>
                                    <field name="phone"/>
                                    <field name="mobile"/>
                                    <field name="email"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </xpath>
                <xpath expr="//form/sheet/notebook" position="after">
                    <field name="duplicated_bank_account_partners_count" invisible="1"/>
                    <field name="same_vat_partner_id" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
