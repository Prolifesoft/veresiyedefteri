<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_veresiye" model="ir.ui.view">
        <field name="name">res.partner.form.veresiye</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_view_veresiye" type="object" class="oe_stat_button" icon="fa-credit-card">
                    <field name="veresiye_count" widget="statinfo" string="Veresiye Fiş"/>
                </button>
            </div>
            <field name="category_id" position="after">
                <group string="Veresiye Durumu" colspan="4">
                    <div class="o_row">
                        <span class="badge badge-pill badge-info">
                            Toplam: <field name="veresiye_total" widget="monetary" nolabel="1"/>
                        </span>
                        <span class="badge badge-pill badge-success">
                            Ödenen: <field name="veresiye_paid" widget="monetary" nolabel="1"/>
                        </span>
                        <span class="badge badge-pill badge-warning">
                            Kalan: <field name="veresiye_due" widget="monetary" nolabel="1"/>
                        </span>
                    </div>
                    <button name="action_print_veresiye_list" string="Yazdır (Liste)" type="object" class="btn-secondary oe_link"/>
                </group>
            </field>
            <xpath expr="//notebook" position="inside">
                <page string="Veresiye Defteri">
                    <field name="ledger_line_ids" nolabel="1">
                        <tree editable="bottom">
                            <field name="date"/>
                            <field name="product_id"/>
                            <field name="quantity"/>
                            <field name="subtotal" widget="monetary"/>
                        </tree>
                    </field>
                    <field name="ledger_payment_ids" string="Ödemeler" nolabel="1" attrs="{'invisible': [('ledger_payment_ids','=',[])]}">
                        <tree editable="bottom">
                            <field name="date"/>
                            <field name="amount" widget="monetary"/>
                            <field name="note"/>
                        </tree>
                    </field>
                </page>
            </xpath>
            <xpath expr="//div[@class='oe_chatter_position oe_folded']" position="replace">
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
