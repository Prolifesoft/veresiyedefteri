<odoo>
    <data>
        <!-- Partner Tree View -->
        <record id="view_partner_veresiye_tree" model="ir.ui.view">
            <field name="name">res.partner.veresiye.tree</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="veresiye_total_amount"/>
                    <field name="veresiye_paid_amount"/>
                    <field name="veresiye_remaining_amount"/>
                </tree>
            </field>
        </record>

        <!-- Partner Form View -->
        <record id="view_partner_veresiye_form" model="ir.ui.view">
            <field name="name">res.partner.veresiye.form</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="phone"/>
                        </group>
                        <notebook>
                            <page string="Borçlar">
                                <field name="veresiye_ledger_ids">
                                    <tree>
                                        <field name="date"/>
                                        <field name="total_amount"/>
                                        <field name="paid_amount"/>
                                        <field name="remaining_amount"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action and Menu -->
        <record id="action_veresiye_partner" model="ir.actions.act_window">
            <field name="name">Müşteriler</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_partner_veresiye_tree"/>
        </record>

        <menuitem id="menu_veresiye_partner" parent="menu_veresiye_root" action="action_veresiye_partner"/>
    </data>
</odoo>
