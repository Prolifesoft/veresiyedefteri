<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_veresiye_ledger_tree" model="ir.ui.view">
        <field name="name">veresiye.ledger.tree</field>
        <field name="model">veresiye.ledger</field>
        <field name="arch" type="xml">
            <tree decoration-success="state=='posted'" decoration-muted="state=='cancelled'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="date"/>
                <field name="amount_total" widget="monetary"/>
                <field name="amount_paid" widget="monetary"/>
                <field name="amount_due" widget="monetary"/>
                <field name="state" widget="badge"
                       decoration-success="state=='posted'"
                       decoration-info="state=='draft'"
                       decoration-danger="state=='cancelled'"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_veresiye_ledger_form" model="ir.ui.view">
        <field name="name">veresiye.ledger.form</field>
        <field name="model">veresiye.ledger</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Onayla" type="object"
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_draft" string="Taslak" type="object"
                            invisible="state != 'posted'"/>
                    <button name="action_cancel" string="İptal Et" type="object"
                            invisible="state == 'cancelled'"/>
                    <button name="action_add_payment" string="Ödeme Yap" type="object"
                            class="btn-secondary" invisible="amount_due &lt;= 0"/>
                    <button name="action_pay_all" string="Tümünü Öde" type="object"
                            class="btn-primary" invisible="amount_due &lt;= 0"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,posted,cancelled"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(prolifesoft_veresiye_defteri.action_report_veresiye_receipt)d" type="action"
                                string="Fiş Yazdır" class="oe_stat_button" icon="fa-print"/>
                    </div>

                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="currency_id" invisible="1" readonly="1"/>
                            <field name="company_id" invisible="1" groups="base.group_multi_company"/>
                        </group>
                    </group>

                    <div class="o_row">
                        <div class="o_col-6">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="name"/>
                                    <field name="quantity"/>
                                    <field name="price_unit" widget="monetary"/>
                                    <field name="subtotal" widget="monetary" readonly="1"/>
                                    <field name="currency_id" invisible="1"/>
                                </tree>
                            </field>
                        </div>
                        <div class="o_col-6">
                            <field name="payment_ids" string="Ödemeler" nolabel="1"
                                   class="o_field_full_width">
                                <tree editable="bottom" create="1" edit="1" delete="1">
                                    <field name="date"/>
                                    <field name="amount" widget="monetary"/>
                                    <field name="note"/>
                                </tree>
                            </field>
                        </div>
                    </div>

                    <group class="oe_subtotal_footer oe_right">
                        <field name="amount_total" widget="monetary" class="oe_subtotal_footer_separator"/>
                        <field name="amount_paid" widget="monetary"/>
                        <field name="amount_due" widget="monetary" class="oe_subtotal_footer_separator"/>
                    </group>

                    <group>
                        <field name="notes" placeholder="Ek açıklamalar..."/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_veresiye_ledger_search" model="ir.ui.view">
        <field name="name">veresiye.ledger.search</field>
        <field name="model">veresiye.ledger</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Fiş Numarası"/>
                <field name="partner_id" string="Müşteri"/>
                <separator/>
                <filter string="Taslak" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Onaylandı" name="posted" domain="[('state', '=', 'posted')]"/>
                <filter string="Borcun Kalan" name="has_due" domain="[('amount_due', '>', 0)]"/>
                <separator/>
                <group expand="0" string="Grupla">
                    <filter string="Müşteri" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Durum" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Tarih" name="group_date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_veresiye_ledger" model="ir.actions.act_window">
        <field name="name">Veresiye Defteri</field>
        <field name="res_model">veresiye.ledger</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_veresiye_ledger_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                İlk veresiye fişinizi oluşturun!
            </p>
            <p>
                Müşterilerinizin veresiye alışverişlerini takip edin.
                Ürün satırları ekleyin ve ödemeleri kaydedin.
            </p>
        </field>
    </record>

    <!-- List Actions -->
    <record id="action_veresiye_ledger_add_payment_multi" model="ir.actions.server">
        <field name="name">Ödeme Yap</field>
        <field name="model_id" ref="model_veresiye_ledger"/>
        <field name="binding_model_id" ref="model_veresiye_ledger"/>
        <field name="binding_type">action</field>
        <field name="state">code</field>
        <field name="code">records.ensure_one(); action = records.action_add_payment()</field>
    </record>

    <record id="action_veresiye_ledger_pay_all_multi" model="ir.actions.server">
        <field name="name">Tümünü Öde</field>
        <field name="model_id" ref="model_veresiye_ledger"/>
        <field name="binding_model_id" ref="model_veresiye_ledger"/>
        <field name="binding_type">action</field>
        <field name="state">code</field>
        <field name="code">records.action_pay_all()</field>
    </record>

    <record id="action_veresiye_ledger_print_receipt_multi" model="ir.actions.server">
        <field name="name">Fiş Yazdır</field>
        <field name="model_id" ref="model_veresiye_ledger"/>
        <field name="binding_model_id" ref="model_veresiye_ledger"/>
        <field name="binding_type">action</field>
        <field name="state">code</field>
        <field name="code">action = env.ref('prolifesoft_veresiye_defteri.action_report_veresiye_receipt').report_action(records)</field>
    </record>
</odoo>
