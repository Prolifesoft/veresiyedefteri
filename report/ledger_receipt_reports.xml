<odoo>
    <data>
        <record id="paperformat_ps_ledger" model="report.paperformat">
            <field name="name">80mm Fiş</field>
            <field name="default" eval="False"/>
            <field name="format">custom</field>
            <field name="page_width">80</field>
            <field name="page_height">297</field>
            <field name="margin_top">2</field>
            <field name="margin_bottom">2</field>
            <field name="margin_left">2</field>
            <field name="margin_right">2</field>
        </record>
        <report
            id="action_report_veresiye_receipt"
            model="ps.ledger.entry"
            string="Veresiye Fişi"
            report_type="qweb-html"
            name="invoice_pos_receipt_safe.fixed_pos_template"
            file="invoice_pos_receipt_safe.fixed_pos_template"
            paperformat="paperformat_ps_ledger"
            print_report_name="'VERESIYE_FIS_' + object.name"
        />
        <!-- Legacy external ID for backward compatibility -->
        <record id="report_veresiye_receipt" model="ir.model.data">
            <field name="name">report_veresiye_receipt</field>
            <field name="model">ir.actions.report</field>
            <field name="module">veresiyedefteri</field>
            <field name="res_id" eval="env.ref('veresiyedefteri.action_report_veresiye_receipt').id"/>
        </record>
    </data>
</odoo>
