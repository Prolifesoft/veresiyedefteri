<odoo>
    <template id="ledger_receipt_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page" style="width:80mm; margin:2mm; font-size:11px;">
                    <h3>Veresiye Fişi</h3>
                    <p><strong>Müşteri:</strong> <span t-esc="doc.partner_id.name"/></p>
                    <p><strong>Tarih:</strong> <span t-esc="doc.date"/></p>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Ürün</th>
                                <th>Açıklama</th>
                                <th>Adet</th>
                                <th>Fiyat</th>
                                <th>Toplam</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td t-esc="doc.product_id.display_name"/>
                                <td t-esc="doc.description"/>
                                <td t-esc="doc.quantity"/>
                                <td t-esc="doc.price_unit"/>
                                <td t-esc="doc.total"/>
                            </tr>
                        </tbody>
                    </table>
                    <p><strong>Müşteri Bakiyesi:</strong> <span t-esc="doc.partner_id.x_ledger_balance"/></p>
                    <p><em>Fatura yerine geçmez.</em></p>
                </div>
            </t>
        </t>
    </template>
</odoo>
